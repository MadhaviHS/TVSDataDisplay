<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimen20"
    android:background="@color/whiteColor1"
    android:elevation="@dimen/dimen10">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen5"
        android:layout_weight="8"
        android:orientation="horizontal">
        <!-- <TextView
             android:id="@+id/tvRoundName"
             android:layout_width="@dimen/dimen30"
             android:layout_height="@dimen/dimen30"
             android:layout_marginTop="@dimen/dimen5"
             android:layout_marginBottom="@dimen/dimen5"
             android:textColor="@color/white"
             android:background="@drawable/circle"
             android:gravity="center_vertical"/>-->
        <ImageView
            android:id="@+id/tv_rounded_name"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="@dimen/dimen5"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimen10"
            android:text="Madworld"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/textSize16" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dimen10"
        android:layout_weight="2">

        <ImageView
            android:id="@+id/ivRightArrow"
            android:layout_width="@dimen/dimen30"
            android:layout_height="@dimen/dimen30"

            android:background="@drawable/ic_keyboard_arrow_right_orange_a700_24dp" />
    </LinearLayout>
</LinearLayout>